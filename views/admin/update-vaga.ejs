<%- include('header.ejs') %>

 
    <h2>Atualizar vaga: <a href="/admin/vagas">Vaga</a></h2>
    <div class="jobsList">
      <form method="POST">
        <label>Titulo: </label>
        <input type="text" name="titulo" value="<%-vaga.titulo%>">
        <label>Descrição:</label>
        <textarea name="descricao"><%-vaga.descricao%></textarea>
        <label>Categoria</label>
        <select name="categoria">
          <% - categorias.forEach(cat => { %>
            <option value="<%- cat.id%>" <% if(cat.id == vaga.categoria){%>  selected <%}%> ><%- cat.categoria%></option>
          <%})%>
          
        </select>
        <button>Atualizar</button>
      </form>
    </div>
  </div>

 <%- include('footer.ejs') %>